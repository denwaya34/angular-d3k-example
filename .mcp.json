{
  "mcpServers": {
    "dev3000": {
      "type": "http",
      "url": "http://localhost:3684/mcp"
    },
    "angular-cli": {
      "command": "npx",
      "args": [
        "-y",
        "@angular/cli",
        "mcp"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        ".",
        "--enable-web-dashboard",
        "false"
      ],
      "env": {}
    },
    "sequential-thinking": {
      "command": "bunx",
      "args": [
        "@modelcontextprotocol/server-sequential-thinking@latest"
      ]
    }
  }
}
